<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.cart.purchasesuccess.view.PurchaseSuccessActivity">

    <ImageView
        android:id="@+id/purchase_success_image_id"
        android:layout_width="300dp"
        android:layout_height="500dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/purchasesuccessenglish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/thanks_button_id"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/blackColor"
        android:text="@string/thanks_purchases"
        android:textAllCaps="false"
        android:textColor="@color/whiteColor"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/purchase_success_image_id"
        app:layout_constraintStart_toStartOf="@+id/purchase_success_image_id"
        app:layout_constraintTop_toBottomOf="@+id/purchase_success_image_id" />

</androidx.constraintlayout.widget.ConstraintLayout>